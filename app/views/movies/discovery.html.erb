<% title @movie.title %>

<% if @movie.youtube_trailer_id.present? %>
  <object width="640" height="360">
    <param name="movie" value="https://www.youtube.com/embed/<%= @movie.youtube_trailer_id %>?html5=1&amp;rel=0&amp;hl=en_US&amp;version=3"/>
    <param name="allowFullScreen" value="true"/>
    <param name="allowscriptaccess" value="always"/>
    <embed width="640" height="360" src="https://www.youtube.com/embed/<%= @movie.youtube_trailer_id %>?html5=1&amp;rel=0&amp;hl=en_US&amp;version=3" class="youtube-player" type="text/html" allowscriptaccess="always" allowfullscreen="true"/>
  </object>
<% end %>

<%= link_to 'next', @next_discovery_path %>

