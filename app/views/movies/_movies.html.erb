<div class="container-fluid">
  <div class="row">
    <div class="movies">
      <% movies.each do |movie| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
          <%= render 'movies/movie', movie: movie %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12">
      <%= paginate @movies %>
    </div>
  </div>
</div>
