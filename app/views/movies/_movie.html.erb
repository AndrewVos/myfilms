<div class="movie">
  <div class="title">
    <span>
      <%= link_to movie_path(movie) do %>
        <%= movie.title_with_year %>
      <% end %>
    </span>
  </div>

  <div class="poster">
    <%= link_to movie_path(movie) do %>
      <%= image_tag movie.large_poster_url %>
    <% end %>
  </div>

  <%= render 'movies/actions', movie: movie %>
</div>
