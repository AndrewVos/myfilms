<% title @movie.title %>

<div class="discovery">
  <div class="video">
    <%= render 'movies/video', youtube_video_id: @movie.youtube_trailer_id, width: '100%', height: '100%', autoplay: true, next_page_path: @next_discovery_path %>
  </div>
  <div class="bottom-row">
    <%= render 'movies/actions', movie: @movie %>
    <div class="navigation">
      <div class="previous">
        <%= link_to '<<- previous', @previous_discovery_path %>
      </div>
      <div class="next">
        <%= link_to 'next ->>', @next_discovery_path %>
      </div>
    </div>
  </div>
</div>
